---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import ArticleTopLayout from "@layouts/ArticleTopLayout.astro";
import ArticleBottomLayout from "@layouts/ArticleBottomLayout.astro";
import { stat } from "fs/promises";
import path from "path";

// Create the static blog pages
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

// Get the requested post
type Props = CollectionEntry<"blog">;
const post = Astro.props;
const { title, summary } = post.data;

// Get file modification time
const contentDir = path.join(process.cwd(), "src/content/blog", post.slug);
const indexFile = path.join(contentDir, "index.md");
let modifiedDate = post.data.date;

try {
  const stats = await stat(indexFile);
  modifiedDate = new Date(stats.mtime);
} catch (error) {
  console.warn(`Could not read file stats for ${indexFile}`);
}
---

<PageLayout title={title} description={summary}>
  <TopLayout>
    <div class="animate">
      <ArticleTopLayout entry={post} modifiedDate={modifiedDate} />
    </div>
  </TopLayout>
  <BottomLayout>
    <div class="animate">
      <ArticleBottomLayout entry={post} />
    </div>
  </BottomLayout>
</PageLayout>
