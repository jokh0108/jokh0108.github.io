---
import "@styles/global.css";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Drawer from "@components/Drawer.astro";
import TableOfContents from "@components/TableOfContents.tsx";
const { title, description } = Astro.props;
import { SITE } from "@consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} />
  </head>
  <body>
    <Header />
    <Drawer />
    <main class="relative">
      <slot />

      {/* TOC Sidebar - Desktop only, sticky positioned */}
      <aside class="hidden toc:block fixed right-0 top-32 w-56 pointer-events-none">
        <div class="sticky top-32 pr-8 pointer-events-auto">
          <TableOfContents client:load />
        </div>
      </aside>
    </main>
    <Footer />
  </body>
</html>
